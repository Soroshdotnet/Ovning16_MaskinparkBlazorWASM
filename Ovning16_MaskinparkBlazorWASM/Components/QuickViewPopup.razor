<h3>QuickViewPopup</h3>

@if (_machine != null)
{
   <div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button @onclick="Close" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
                <div class="form-group row">
              <label class="col-sm-5 col-form-label">Machine Name</label>
              <div class="col-sm-7">
                  <label typeof="text" readonly class="form-control-plaintext">
                      @_machine.Name
                  </label>
              </div>
          </div>
      </div>
      <div class="modal-footer">
        <button @onclick="Close" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button @onclick="Close" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
}